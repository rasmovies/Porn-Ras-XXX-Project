{
  "version": 2,
  "buildCommand": "cd client && CI=false npm run build",
  "outputDirectory": "client/build",
  "installCommand": "cd client && npm install --legacy-peer-deps",
  "framework": null,
  "ignoreCommand": "exit 1",
  "functions": {
    "api/ftp/upload.js": {
      "maxDuration": 300,
      "memory": 3008
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}

