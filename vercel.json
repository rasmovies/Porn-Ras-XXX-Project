{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/health"
    },
    {
      "source": "/",
      "destination": "/api/index"
    },
    {
      "source": "/api/auth/verify",
      "destination": "/api/auth/verify"
    },
    {
      "source": "/api/auth/generate-code",
      "destination": "/api/auth/generate-code"
    },
    {
      "source": "/api/auth/verify-code",
      "destination": "/api/auth/verify-code"
    }
  ]
}

