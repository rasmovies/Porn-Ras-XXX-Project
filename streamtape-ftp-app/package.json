{
  "name": "streamtape-ftp-app",
  "version": "1.0.0",
  "description": "Streamtape FTP Client - FileZilla benzeri macOS uygulamasÄ±",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "dev": "electron . --dev"
  },
  "keywords": [
    "ftp",
    "streamtape",
    "filezilla",
    "macos"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "basic-ftp": "^5.0.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.streamtape.ftp",
    "productName": "Streamtape FTP",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/basic-ftp/**/*"
    ]
  }
}
